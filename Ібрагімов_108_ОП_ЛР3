#include "windows.h"
#include "iostream"
#include "iomanip"

using namespace std;

int main()
{
	int x, a, b;
	cout << "\nВведіть х: ";
	cin >> x;
	cout << "\nВведіть A: ";
	cin >> a;
	cout << "\nВведіть B: ";
	cin >> b;
	cout << "\n x належить інтервалу [A ; B] ?   " << boolalpha << (x >= a == x <= b) << endl;
	system("pause");

	return 0;
}
